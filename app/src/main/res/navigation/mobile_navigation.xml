<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.androidassignment.Fragment.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_animal"
            app:destination="@id/nav_animal" />
    </fragment>

    <fragment
        android:id="@+id/nav_animal"
        android:name="com.example.androidassignment.Fragment.AnimalFragment"
        android:label="Animals list"
        tools:layout="@layout/fragment_animal">
        <action
            android:id="@+id/action_nav_animal_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_detail"
        android:name="com.example.androidassignment.Fragment.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" />
</navigation>