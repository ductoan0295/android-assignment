<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ActivitySlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_right</item>
    </style>
</resources>